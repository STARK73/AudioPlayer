<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:elevation="100dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_image_singer"
            android:layout_width="@dimen/size_image_button"
            android:layout_height="@dimen/size_image_button"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/item_singer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_bottom"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/item_image_singer"
            android:paddingTop="@dimen/padding_text_list"
            android:textSize="@dimen/size_text_big"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_singer_genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_image_singer"
            android:layout_below="@+id/item_singer_name"
            android:paddingBottom="@dimen/padding_text_list"
            android:paddingLeft="@dimen/padding_text_list"
            android:textSize="@dimen/size_text_small" />

        <TextView
            android:id="@+id/item_singer_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:textSize="@dimen/size_text_small"
            android:padding="@dimen/padding_text_list" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>